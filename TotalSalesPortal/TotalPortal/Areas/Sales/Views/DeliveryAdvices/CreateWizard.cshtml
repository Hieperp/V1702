    @Html.HiddenFor(model => model.Promotion.StartDate);
    @Html.HiddenFor(model => model.Promotion.EndDate);
    @Html.HiddenFor(model => model.Promotion.DiscountPercent);
    @Html.HiddenFor(model => model.Promotion.ControlFreeQuantity);

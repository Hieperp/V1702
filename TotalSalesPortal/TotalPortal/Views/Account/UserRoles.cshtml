@model TotalPortal.Models.SelectUserRolesViewModel

@{
    ViewBag.Title = "UserRoles";
}

<h2>Roles for user @Html.DisplayFor(model => model.Email)</h2>

<hr />



@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{

    @Html.AntiForgeryToken()



    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">

            <div class="col-md-10">

                @Html.HiddenFor(model => model.Email)

            </div>

        </div>



        <h4>Select Role Assignments</h4>

        <br />

        <hr />



        <table>

            <tr>

                <th style="text-align:center">

                    Select

                </th>

                <th>

                    Role

                </th>

            </tr>

            @Html.EditorFor(model => model.Roles)

        </table>

        <br />

        <hr />



        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Save" class="btn btn-default" />

            </div>

        </div>

    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

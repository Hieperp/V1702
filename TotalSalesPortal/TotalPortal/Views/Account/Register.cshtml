@model TotalPortal.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Register a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>


    // Add the LastName, FirstName, and Email Properties:

    <div class="form-group">

        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">

            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">

            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })

        </div>

    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.OrganizationalUnitID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Kendo().DropDownListFor(m => m.OrganizationalUnitID).BindTo(Model.OrganizationalUnitSelectList).HtmlAttributes(new { @class = "form-controlxx" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.SameOUAccessLevel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Kendo().DropDownListFor(m => m.SameOUAccessLevel).BindTo(Model.AccessLevelSelectList).HtmlAttributes(new { @class = "form-controlxx" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SameLocationAccessLevel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Kendo().DropDownListFor(m => m.SameLocationAccessLevel).BindTo(Model.AccessLevelSelectList).HtmlAttributes(new { @class = "form-controlxx" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OtherOUAccessLevel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Kendo().DropDownListFor(m => m.OtherOUAccessLevel).BindTo(Model.AccessLevelSelectList).HtmlAttributes(new { @class = "form-controlxx" })
        </div>
    </div>

    
    <div class="form-group">
        @Html.Label(" ", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}


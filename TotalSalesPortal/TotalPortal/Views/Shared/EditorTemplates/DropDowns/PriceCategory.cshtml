@model TotalPortal.Areas.Commons.ViewModels.Helpers.IPriceCategoryDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.PriceCategoryID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.PriceCategoryID).BindTo(Model.PriceCategorySelectList).HtmlAttributes((ViewData["PriceCategoryReadonly"] != null && (bool)ViewData["PriceCategoryReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.PriceCategoryID, "", new { @class = "text-danger" })
    </div>
</div>


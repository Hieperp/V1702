@model TotalPortal.Areas.Commons.ViewModels.Helpers.ICustomerCategoryDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.CustomerCategoryID)
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.CustomerCategoryID).BindTo(Model.CustomerCategorySelectList).HtmlAttributes((ViewData["CustomerCategoryReadonly"] != null && (bool)ViewData["CustomerCategoryReadonly"] == true ? (object)new { @class = "left-panel-input", @readonly = "readonly" } : (object)new { @class = "left-panel-input" }))
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.CustomerCategoryID, "", new { @class = "text-danger" })
    </div>
</div>

